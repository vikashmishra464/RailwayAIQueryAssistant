<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Solid color for the background. This will be tinted by android:backgroundTint="#E8EDF1" in the layout. -->
    <solid android:color="@android:color/white" />

    <!-- Defines the radius for the rounded corners -->
    <corners android:radius="8dp" />

    <!-- Optional: Add a light border/stroke for definition -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

</shape>
