<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003366"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/main_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="32dp">

        <!-- Header and Logo Placeholder -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/tv_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Dashboard"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#ffcc00"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_dialog_info"
                android:tint="#ffcc00"
                android:contentDescription="Railway Logo"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>


        <!-- View Customers Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_customers"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="18dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#1a4773">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ðŸ“‹ View Customers"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:padding="16dp" />
        </androidx.cardview.widget.CardView>

        <!-- Add Customer Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_add_customer"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="18dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#1a4773">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="âž• Add Customer"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:padding="16dp" />
        </androidx.cardview.widget.CardView>

        <!-- Leads Card (Complains) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_leads"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="18dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#1a4773">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ðŸ“Œ Complains"
                android:textSize="20sp"
                android:textColor="#ffcc00"
                android:gravity="center"
                android:padding="16dp" />
        </androidx.cardview.widget.CardView>

        <!-- Reports Card (Notification Center) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_reports"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="18dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#1a4773">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ðŸ“Š Notification Center"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:padding="16dp" />
        </androidx.cardview.widget.CardView>

        <!-- Settings Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_settings"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="18dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#1a4773">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="âš™ï¸ Settings"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:padding="16dp" />
        </androidx.cardview.widget.CardView>

        <!-- Logout Card (Accent for warning/action) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_logout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="18dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#ffcc00">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ðŸšª Logout"
                android:textSize="20sp"
                android:textColor="#003366"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
