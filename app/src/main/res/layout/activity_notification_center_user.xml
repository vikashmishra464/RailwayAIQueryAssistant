<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F3F5"
    tools:context=".ListPage">

    <!-- HEADER / APPLICATION TITLE BAR - Branding and context -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2A4D69"
        android:text="Real-time Operational Feed"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:textStyle="bold"
        android:elevation="4dp"
        tools:ignore="RtlSymmetry" />

    <!-- RecyclerView Content Area (Fills remaining screen space) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNotifications"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:background="#F0F3F5" />

</LinearLayout>
