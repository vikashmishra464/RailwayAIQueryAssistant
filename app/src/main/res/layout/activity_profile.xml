<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F3F5"
    tools:context=".UserProfileActivity">

    <!-- HEADER / APPLICATION TITLE BAR - Branding and context -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2A4D69"
        android:text="User Profile &amp; Role Access"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:textStyle="bold"
        android:elevation="4dp"
        tools:ignore="RtlSymmetry" />

    <!-- Main Content Container (Padded) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Profile Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Operational Crew Member Details"
                android:textColor="#2A4D69"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- Profile Data Fields Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_bg_white"
                android:padding="20dp"
                android:elevation="2dp"
                android:layout_marginBottom="24dp">

                <!-- Helper to simulate a rounded white background drawable -->
                <!-- Note: The actual 'rounded_bg_white' drawable must be defined separately in your project. -->

                <!-- First Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:id="@+id/tvFirstNameLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="First Name:"
                        android:textColor="#555555"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tvFirstName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="John"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Last Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:id="@+id/tvLastNameLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Last Name:"
                        android:textColor="#555555"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tvLastName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Smith"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:id="@+id/tvEmailLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Email:"
                        android:textColor="#555555"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="john.s@railops.com"
                        android:textSize="16sp"
                        android:textColor="#333333" />
                </LinearLayout>

                <!-- Phone -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:id="@+id/tvPhoneLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Phone:"
                        android:textColor="#555555"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="+1 555-555-1234"
                        android:textSize="16sp"
                        android:textColor="#333333" />
                </LinearLayout>

                <!-- Role -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvRoleLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Role:"
                        android:textColor="#555555"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tvRole"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Train Dispatcher (D-04)"
                        android:textSize="16sp"
                        android:textColor="#008CBA"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <!-- Logout Button (Primary/Cautionary Action) -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGOUT"
                android:textColor="#FFFFFF"
                android:backgroundTint="#D9534F"
                android:textStyle="bold"
                android:minHeight="56dp"
                android:layout_marginBottom="16dp"
                android:textSize="18sp" />

            <!-- Back Button (Secondary Action) -->
            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back to Dashboard"
                android:textColor="#2A4D69"
                android:backgroundTint="#FFFFFF"
                android:minHeight="56dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:layout_gravity="center_horizontal" />

            <!-- Progress Bar (Kept for completeness, styled centrally) -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"
                android:indeterminateTint="#2A4D69" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
