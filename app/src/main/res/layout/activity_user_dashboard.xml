<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3F5"
    tools:context=".UserDashboard">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Header Section (Text and Image) -->

        <!-- Title/Subtitle Container (Left Side) -->
        <LinearLayout
            android:id="@+id/headerTextContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/amazonImage"
            app:layout_constraintBottom_toTopOf="@+id/row1"
            android:layout_marginTop="40dp">

            <!-- Main Title (CRM -> RAIL) -->
            <TextView
                android:id="@+id/amazonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RAIL OPERATIONS"
                android:textSize="32sp"
                android:textColor="#2A4D69"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold" />

            <!-- Subtitle (Customer Support -> Dispatch & Support) -->
            <TextView
                android:id="@+id/amazonDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dispatch &amp; Support"
                android:textSize="18sp"
                android:textColor="#7D8D9A"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Branding Image (Right Side) -->
        <ImageView
            android:id="@+id/amazonImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/button_bg"
            android:clipToOutline="true"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/railway_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/row1"
            app:layout_constraintVertical_bias="0.0"
            app:tint="#008CBA"
            tools:ignore="ContentDescription" />

        <!-- First Row of Cards -->
        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/amazonImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Profile Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/profileCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/profilebox"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/profile"
                        app:tint="#2A4D69"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/profilename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Profile"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="16dp"
                        android:layout_below="@id/profile"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Complain Card (Renamed to Issue Reporting) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/complainCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/complainbox"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/complain"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/complain"
                        app:tint="#CC5500"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/complainName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Issue Report"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="16dp"
                        android:layout_below="@id/complain"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Second Row of Cards -->
        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/row1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Notification Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/notificationCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/notificationBox"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/Notification"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/active"
                        app:tint="#008CBA"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/homeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Notification"
                        android:layout_marginTop="16dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="sans-serif-medium"
                        android:text="Notifications"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Coupon Card (Renamed to Dispatch) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/couponCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/couponBox"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/Coupon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/voucher"
                        app:tint="#4CAF50"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/beautyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dispatch"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="16dp"
                        android:layout_below="@id/Coupon"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Third Row of Cards (Single Item) -->
        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/row2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Logout/Feedback Card (Made Logout prominent) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/feedbackCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/feedbackBox"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/Feedback"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/logout"
                        app:tint="#D9534F"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/pharmName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign Out"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="16dp"
                        android:layout_below="@id/Feedback"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Added an empty card placeholder for a clean, balanced 2x3 grid look -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="16dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
